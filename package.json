{
  "name": "ragi-saas",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run web",
    "dev:full": "concurrently \"npm run web\" \"npm run stripe:listen\"",
    "stripe:listen": "stripe listen --forward-to localhost:3000/api/webhooks/stripe",
    "web": "npm run dev --workspace=web",
    "web:build": "npm run build --workspace=web",
    "web:start": "npm run start --workspace=web",
    "web:storage:setup": "npm run storage:setup --workspace=web",
    "build": "npm run build --workspace=web",
    "start": "npm run start --workspace=web",
    "type-check": "npm run type-check --workspace=web",
    "db:generate": "npm run db:generate --workspace=web",
    "db:generate:custom": "npm run db:generate:custom --workspace=web",
    "db:migrate": "npm run db:migrate --workspace=web",
    "db:rollback": "npm run db:rollback --workspace=web",
    "db:status": "npm run db:status --workspace=web",
    "db:seed": "npm run db:seed --workspace=web",
    "storage:setup": "npm run storage:setup --workspace=web",
    "setup": "npm install --workspace=web",
    "setup:gcp:dev": "uv run python -m scripts.setup_gcp_dev",
    "setup:gcp:prod": "uv run python -m scripts.setup_gcp_prod",
    "deploy:processor:dev": "uv run python -m scripts.deploy_rag_processor_dev",
    "deploy:processor:prod": "uv run python -m scripts.deploy_rag_processor_prod",
    "deploy:gcs-handler:dev": "uv run python -m scripts.deploy_gcs_handler_dev",
    "deploy:gcs-handler:prod": "uv run python -m scripts.deploy_gcs_handler_prod",
    "deploy:task-processor:dev": "uv run python -m scripts.deploy_task_processor_dev",
    "deploy:task-processor:prod": "uv run python -m scripts.deploy_task_processor_prod",
    "env:pull:dev": "cd apps/web && npm run env:pull:dev",
    "env:pull:prod": "cd apps/web && npm run env:pull:prod",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write .",
    "clean": "npm run clean --workspaces --if-present"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "eslint": "^9.30.0",
    "typescript": "^5.8.3",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3"
  }
}
